<div class="row">
    <div class="col-11">
        <h1>Sign Up</h1>
    </div>
    <div class="col-1">
        <img src="/assets/cedarvilleLogo.png" alt="Cedarville University Logo" height="48" width="48" class="align-right"/>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="col-12 section">
                <div class="field">
                    <%= f.label :email, class: "label" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login" %>
                </div>
                <div class="field">
                    <%= f.label :login, class: "label" %><br />
                    <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "login" %>
                </div>
                <div class="field">
                    <%= f.label :password, class: "label" %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "login" %>
                </div>
                <div class="field">
                    <%= f.label :password_confirmation, class: "label" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login" %>
                </div>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= render "devise/shared/links" %>
            </div>
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4 centered actions">
                    <%= f.submit "Sign Up" %>
                </div>
                <div class="col-4"></div>
            </div>
        <% end %>
    </div>
    <div class="col-3"></div>
</div>